﻿@using System.Web.Optimization;
@{
     Layout = "~/Views/Shared/_Sign.cshtml";
     ViewBag.Title = "SignUp";
}

<!DOCTYPE html>
<html style="max-height: 100%">
<body class="boxed-layout" style="max-height: 100%">

     <div class="account-pages mt-5 mb-5">
          <div class="container">
               <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                         <div class="card border-1 card-sign">

                              <div class="card-body p-3 ">

                                   <div class="text-center w-75 m-auto img-signin">
                                        <a href="~/Home/Index">
                                             <span class="text-after-logo-sign"><img src="~/Content/assets/images/logo-light.png" alt="" height="22">Ticket Express</span>
                                        </a>
                                        <p class="text-muted mb-4 mt-3">Enter your email address and password to access admin panel.</p>
                                   </div>

                                   <form action="#">

                                        <div class="form-group">
                                             <label for="fullname">Full Name</label>
                                             <input class="form-control" type="text" id="fullname" placeholder="Enter your name" required>
                                        </div>

                                        <div class="form-group">
                                             <label for="password">Password</label>
                                             <input class="form-control" type="password" required id="password" placeholder="Enter your password">
                                        </div>

                                        <div class="form-group">
                                             <label for="emailaddress">Email address</label>
                                             <input class="form-control" type="email" id="emailaddress" required placeholder="Enter your email">
                                        </div>

                                        <div class="form-group">
                                             <label for="phone">Phone Number</label>
                                             <input class="form-control" type="tel" id="phone" name="phone" placeholder="Enter your phone number" pattern="[0-9]{10}" required>
                                        </div>

                                        <div class="form-group">
                                             <label for="fullname">Address</label>
                                             <input class="form-control" type="text" id="address" placeholder="Enter your address" required>
                                        </div>


                                        <div class="form-group mb-0 text-center">
                                             <button class="btn btn-primary btn-block" type="submit"> Sign Up </button>
                                        </div>

                                   </form>


                              </div> <!-- end card-body -->
                         </div>
                         <!-- end card -->

                         <div class="row mt-3">
                              <div class="col-12 text-center">
                                   <p class="text-muted">Already have account?  <a href="~/Accounts/SignIn" class="text-muted font-weight-medium ml-1">Sign In</a></p>
                              </div> <!-- end col -->
                         </div>
                         <!-- end row -->

                    </div> <!-- end col -->
               </div>
               <!-- end row -->
          </div>
          <!-- end container -->
     </div>
</body>
</html>