@using System.Web.Optimization;
@{
    Layout = "~/Views/Shared/_Sign.cshtml";
    ViewBag.Title = "SignUp";
}
@model  _10717proiect.Web.Models.Reg.UserRegData
<!DOCTYPE html>
<html style="max-height: 100%">
<body class="boxed-layout" style="max-height: 100%">
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card border-1 card-sign">
                        <div class="card-body p-3 ">
                            <div class="text-center w-75 m-auto img-signin">
                                <a href="~/Home/Index">
                                    <span class="text-after-logo-sign"><img src="~/Content/assets/images/logo-light.png" alt="" height="22">Ticket Express</span>
                                </a>
                                <p class="text-muted mb-4 mt-3">Enter your email address and password to access admin panel.</p>
                            </div>
                            @using (Html.BeginForm("Reg", "Register", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label for="fullname">Full Name</label>
                                    @Html.TextBoxFor(u => u.Username, new { @class = "form-control", id = "fullname", placeholder = "Enter your name", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    @Html.TextBoxFor(u => u.Password, new { @class = "form-control", type = "password", id = "password", placeholder = "Enter your password", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label for="emailaddress">Email address</label>
                                    @Html.TextBoxFor(u => u.Email, new { @class = "form-control", type = "email", id = "emailaddress", placeholder = "Enter your email", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label for="phone">Phone Number</label>
                                    @Html.TextBoxFor(u => u.Phone, new { @class = "form-control", type = "tel", id = "phone", placeholder = "Enter your phone number", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    @Html.TextBoxFor(u => u.Address, new { @class = "form-control", id = "address", placeholder = "Enter your address", required = "required" })
                                </div>
                                <div class="form-group mb-0 text-center">
                                
                                    <button class="btn btn-primary btn-block" type="submit">
                                        Sign Up
                                    </button>
                                </div>
                            }
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->
                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted">Already have account? 
                            <a href="~/Auth/SignIn" class="text-muted font-weight-medium ml-1">Sign In</a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
</body>
</html>