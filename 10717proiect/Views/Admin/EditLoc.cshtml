@using System.Web.Optimization;

<!DOCTYPE html>
<html lang="ro">
<head>
     <meta charset="UTF-8">
     <title>Locații - Admin Dashboard</title>
     <link rel="stylesheet" href="app.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
     
     @Styles.Render("~/Content/assets/css/admin.css")

</head>
<body>
     <header class="topbar">
          <div><strong>Locații - Admin Dashboard</strong></div>
          <div>Utilizator: Admin</div>
     </header>

     <!-- SIDEBAR CU HAMBURGER -->
     @Html.Partial("SideBar")

     <main class="content" id="content">
          <div class="container-admin">
               <div class="locatii-lista">
                    <div class="locatie-card">
                         <div class="locatie-info">
                              <h4>Chișinău Arena</h4>
                              <p>Strada Arborilor 21</p>
                         </div>
                         <div class="locatie-actions">
                              <button class="edit-btn">Editare</button>
                              <button class="delete-btn">Șterge</button>
                         </div>
                    </div>
                    <div class="locatie-card">
                         <div class="locatie-info">
                              <h4>Teatrul Național Mihai Eminescu</h4>
                              <p>Bulevardul Ștefan cel Mare</p>
                         </div>
                         <div class="locatie-actions">
                              <button class="edit-btn">Editare</button>
                              <button class="delete-btn">Șterge</button>
                         </div>
                    </div>
               </div>

               <div class="formular-nou">
                    <h3>Adaugă Locație Nouă</h3>
                    <form>
                         <div class="form-group">
                              <label for="name">Nume locație</label>
                              <input type="text" id="name" name="name">
                         </div>
                         <div class="form-group">
                              <label for="address">Adresă</label>
                              <input type="text" id="address" name="address">
                         </div>
                         <div class="form-group">
                              <label for="description">Descriere</label>
                              <textarea id="description" name="description" rows="3"></textarea>
                         </div>
                         <button type="submit" class="submit-btn">Adaugă Locație</button>
                    </form>
               </div>
          </div>
     </main>


</body>
</html>